{
    "name": "tdu-lib_Ext",
    "description": "電大図書館自動ログイン",
    "version": "1.1.1",
    "manifest_version": 3,
    "homepage_url": "https://github.com/Kokim-electronics/tdu-lib_Ext",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://*.mrcl.dendai.ac.jp/*"
    ],
    "options_ui": {
        "page": "options.html"
    },
    "icons": {
        "16": "images/16.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "tdu-lib ログイン",
        "default_icon": {
            "128": "images/128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.mrcl.dendai.ac.jp/*"
            ],
            "js": [
                "js/login-do.js"
            ]
        }
    ]
}